        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" FontSize="72" TextDecorations="{x:Null}" FontWeight="Bold" TextOptions.TextFormattingMode="Display" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontFamily="DigifaceWide" TextAlignment="Center" Cursor="None" Foreground="#FFCF6020" Grid.ColumnSpan="4" Margin="0,0,-0.252,0">
