<Window x:Class="ChipseaUartHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChipseaUartHelper"
        mc:Ignorable="d"
        Title="ChipseaUartHelper" Height="400" Width="639" Loaded="Window_Loaded">
    <Grid RenderTransformOrigin="0.665,0.527" Margin="10,-19,2,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="410*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="436"></ColumnDefinition>
            <ColumnDefinition Width="84"></ColumnDefinition>
            <ColumnDefinition Width="99"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ComboBox x:Name="box_portName" HorizontalAlignment="Center" Margin="20,7,18,0" VerticalAlignment="Top" Width="61" />
                <ComboBox x:Name="box_baudRate" Grid.Row="1" HorizontalAlignment="Center" Margin="20,7,18,0" VerticalAlignment="Top" Width="61" Height="22" />
                <ComboBox x:Name="box_dataBits" Grid.Row="2" HorizontalAlignment="Center" Margin="20,7,19,0" VerticalAlignment="Top" Width="60" />
                <ComboBox x:Name="box_parity"   Grid.Row="3" HorizontalAlignment="Center" Margin="20,10,19,0" VerticalAlignment="Top" Width="60" />
                <ComboBox x:Name="box_stopBits" Grid.Row="4" HorizontalAlignment="Center" Margin="20,7,19,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.268,0.409" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="btn_open_close" Content="Open" HorizontalAlignment="Center" Margin="10,6,11,0" VerticalAlignment="Top" Width="61" Click="btn_open_close_Click"/>
                <Button x:Name="btn_Send" Content="Send" HorizontalAlignment="Center" Margin="10,7,11,0" Grid.Row="1" VerticalAlignment="Top" Width="61" RenderTransformOrigin="-0.067,0.263" Click="btn_Send_Click"/>
                <Button x:Name="btn_clear" Content="Clear" HorizontalAlignment="Center" Margin="10,6,11,0" Grid.Row="2" VerticalAlignment="Top" Width="61" Click="btn_clear_Click"/>
                <Button x:Name="btn_reset" Content="Reset" HorizontalAlignment="Center" Margin="10,8,11,5" Grid.Row="3" Width="61"/>
                <Button x:Name="btn_help" Content="Help" HorizontalAlignment="Center" Margin="10,10,11,0" Grid.Row="4" VerticalAlignment="Top" Width="61" RenderTransformOrigin="0.194,0.545"/>
            </Grid>

        </Grid>
        <Grid HorizontalAlignment="Left" Height="100" Margin="206,120,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>


    </Grid>
</Window>
