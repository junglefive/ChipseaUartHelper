<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChipseaUartHelper"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" x:Class="ChipseaUartHelper.MainWindow"
        mc:Ignorable="d"
        Title="ChipseaUartHelper" Height="440.5" Width="685.333" Loaded="Window_Loaded" HorizontalContentAlignment="Center" MaxHeight="600" MaxWidth="800" WindowStartupLocation="Manual" Opacity="0.95">
    <Grid RenderTransformOrigin="0.557,0.54" Margin="10,-14,2,9">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="192*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="104"/>
            <ColumnDefinition Width="103"/>
            <ColumnDefinition Width="86"/>
            <ColumnDefinition Width="106"/>
            <ColumnDefinition Width="91"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="4" Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="2" Height="388" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105*"/>
                <ColumnDefinition Width="92*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="106*"/>
                    <ColumnDefinition Width="91*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="btn_Send" Content="Send" HorizontalAlignment="Center" Margin="36,14,8,0" VerticalAlignment="Center" Width="62" RenderTransformOrigin="-0.067,0.263" Click="btn_Send_Click" Height="22" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                <Button x:Name="btn_clear" Content="Clear" HorizontalAlignment="Center" Margin="10,10,19,6" VerticalAlignment="Center" Width="62" Click="btn_clear_Click" Height="21" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Column="1"/>
                <Button x:Name="btn_help" Content="Help" HorizontalAlignment="Center" Margin="10,7,19,0" Grid.Row="1" VerticalAlignment="Center" Width="62" RenderTransformOrigin="0.194,0.545" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Column="1"/>
                <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="23" Margin="28,8,0,0" Grid.Row="2" TextWrapping="Wrap" Text="0xAA" VerticalAlignment="Center" Width="62" TextAlignment="Center"/>
                <Button x:Name="button" Content="Hex" HorizontalAlignment="Center" Margin="10,10,19,3" Grid.Row="2" VerticalAlignment="Center" Width="62" Height="24" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Column="1"/>
                <Button x:Name="button_Copy" Content="Timing" HorizontalAlignment="Center" Margin="36,12,10,4" Grid.Row="3" VerticalAlignment="Center" Width="60" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                <Button x:Name="btn_open_close" Content="Open" HorizontalAlignment="Left" Margin="38,10,0,7" VerticalAlignment="Center" Width="62" Click="btn_open_close_Click" RenderTransformOrigin="0.056,0.476" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.038"/>
                            <TranslateTransform Y="0.018"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button x:Name="button1" Content="Moving" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="3" VerticalAlignment="Top" Width="62" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                <Button x:Name="button_Copy1" Content="Average" HorizontalAlignment="Center" Margin="34,10,10,7" Grid.Row="4" VerticalAlignment="Center" Width="62" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                <Button x:Name="button_Copy2" Content="IIR" HorizontalAlignment="Center" Margin="10,10,19,7" Grid.Row="4" VerticalAlignment="Center" Width="62" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Column="1"/>
            </Grid>
            <RichTextBox x:Name="richTextBox" Margin="-182,48,243,32">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>

        </Grid>


        <d3:ChartPlotter Grid.Row="1" Grid.ColumnSpan="6"/>
        <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Row="2" Grid.RowSpan="4" Margin="10,5,10,-10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="55*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ComboBox x:Name="box_portName" HorizontalAlignment="Center" Margin="1,12,16,6" VerticalAlignment="Center" Width="70" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="#FFFFF6F6" Opacity="0.94" Grid.Column="1" />
            <ComboBox x:Name="box_baudRate" Grid.Row="1" HorizontalAlignment="Center" Margin="1,10,16,8" VerticalAlignment="Center" Width="70" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Column="1" />
            <ComboBox x:Name="box_dataBits" Grid.Row="2" HorizontalAlignment="Center" Margin="1,10,16,8" VerticalAlignment="Center" Width="70" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Column="1" />
            <ComboBox x:Name="box_parityBits"   Grid.Row="3" HorizontalAlignment="Center" Margin="1,12,16,6" VerticalAlignment="Center" Width="70" Height="22" Grid.Column="1" />
            <ComboBox x:Name="box_stopBits" Grid.Row="4" HorizontalAlignment="Center" Margin="1,8,16,11" VerticalAlignment="Center" Width="70" RenderTransformOrigin="0.269,0.318" Height="22" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Column="1" />
            <Label x:Name="label" Content="PortName" HorizontalAlignment="Right" Margin="0,11,0,7" VerticalAlignment="Center" Height="21" Width="62" RenderTransformOrigin="0.323,1.143" FontSize="10" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Foreground="#FFCBC8C8"/>
            <Label x:Name="label_Copy" Content="BaudRate&#xA;" HorizontalAlignment="Center" Margin="6,10,0,9" VerticalAlignment="Center" Height="21" Width="62" RenderTransformOrigin="0.488,0.611" FontSize="10" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Row="1" Foreground="#FFCBC8C8"/>
            <Label x:Name="label_Copy2" Content="DataBits" HorizontalAlignment="Center" Margin="6,8,0,8" VerticalAlignment="Center" Height="24" Width="62" RenderTransformOrigin="0.489,1.302" FontSize="10" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Row="2" Foreground="#FFCBC8C8"/>
            <Label x:Name="label_Copy4" Content="ParityBits" HorizontalAlignment="Center" Margin="6,13,0,6" VerticalAlignment="Center" Height="21" Width="62" RenderTransformOrigin="0.489,1.302" FontSize="10" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Row="3" Foreground="#FFCBC8C8"/>
            <Label x:Name="label_Copy1" Content="StopBits" HorizontalAlignment="Center" Margin="6,8,0,13" VerticalAlignment="Center" Height="20" Width="62" RenderTransformOrigin="0.489,1.302" FontSize="10" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Grid.Row="4" Foreground="#FFCBC8C8"/>
        </Grid>
        <TextBlock x:Name="textBlock" Grid.Column="1" Grid.Row="2" Text="888888" Grid.ColumnSpan="3" FontSize="48" TextDecorations="{x:Null}" FontWeight="Bold" TextOptions.TextFormattingMode="Display" VerticalAlignment="Center" Margin="32,11,39,16" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" FontFamily="DigifaceWide" HorizontalAlignment="Center" TextAlignment="Center" Height="58" Width="222"/>
        <Button x:Name="button2" Content="Anti-shake" Grid.Column="1" HorizontalAlignment="Left" Margin="20,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="67" Height="20"/>
        <Button x:Name="button3" Content="Calibrate" Grid.Column="2" HorizontalAlignment="Left" Margin="16,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="64" Height="20"/>
        <Button x:Name="button4" Content="GetZero" Grid.Column="1" HorizontalAlignment="Left" Margin="20,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="67" Height="22"/>
        <Button x:Name="button5" Content="TrackZero" Grid.Column="2" HorizontalAlignment="Left" Margin="16,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="64" Height="22"/>
        <Button x:Name="button6" Content="Save" Grid.Column="3" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="66" Height="20"/>
        <TextBox x:Name="textBox1" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="20,10,0,5" Grid.Row="5" TextWrapping="Wrap" Text="ADOH" VerticalAlignment="Center" Width="67" TextAlignment="Center"/>
        <TextBox x:Name="textBox2" Grid.Column="2" HorizontalAlignment="Left" Height="18" Margin="16,10,0,0" Grid.Row="5" TextWrapping="Wrap" Text="ADOL" VerticalAlignment="Top" Width="64" TextAlignment="Center"/>
        <TextBox x:Name="textBox3" Grid.Column="3" HorizontalAlignment="Left" Height="18" Margin="10,10,0,0" Grid.Row="5" TextWrapping="Wrap" Text="ADOLL" VerticalAlignment="Top" Width="66" TextAlignment="Center"/>
        <Button x:Name="button7" Content="AddChart" Grid.Column="3" HorizontalAlignment="Left" Margin="10,13,0,0" Grid.Row="4" VerticalAlignment="Top" Width="66"/>


    </Grid>
</Window>
