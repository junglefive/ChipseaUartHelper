<Window x:Class="ChipseaUartHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChipseaUartHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Grid.Row = "4" Grid.Colum = "4" VerticalAlignment = "Center">
    <ComboBox Name="box_portName"   VerticalAlignment="Top" Margin="0,5,0,0"/>
    <ComboBox Name="box_baudRate"   VerticalAlignment="Top" Margin="0,5,0,0"/>
    <ComboBox Name="box_dataBits"   VerticalAlignment="Top" Margin="0,5,0,0"/>
    <ComboBox Name="box_Parity"     VerticalAlignment="Top" Margin="0,5,0,0"/>
    <ComboBox Name="box_stopBits"   VerticalAlignment="Top" Margin="0,5,0,0"/>
    </Grid>
</Window>
